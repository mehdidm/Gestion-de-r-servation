{% extends 'base.html.twig' %}
{% block title%} Liste des Reservations{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="/css/reservations.css">


{% endblock %}
{% block body %}

{% if reservations %}
    <table id="reservations" class="table table-info t">
    
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_r</th>
                <th>Etat</th>
                <th>Client</th>
                <th>Service</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.dateR ? reservation.dateR|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.etat }}</td>
                <td>{{ reservation.idCli.nom }}</td>
                <td>{{ reservation.idService.libelle }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}"class="btn btn-info">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <a href="{{ path('reservation_new') }}"class="btn btn-info">Create new</a>
    </table>
  {% else %}
    <p>Aucun Reservation</p>
  {% endif %} 
    
{% endblock %}
